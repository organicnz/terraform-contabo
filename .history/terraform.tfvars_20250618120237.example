# Contabo API Credentials
# Get these from your Contabo customer control panel under API settings
contabo_client_id     = "your-oauth2-client-id"
contabo_client_secret = "your-oauth2-client-secret"
contabo_user          = "your-api-username"
contabo_password      = "your-api-password"

# Instance Configuration
instance_name = "my-terraform-contabo-server"
hostname      = "terraform-contabo"
product_id    = "VPS-2-SSD-20"  # Available: VPS-1-SSD-10, VPS-2-SSD-20, VPS-3-SSD-40, VPS-4-SSD-60, VPS-5-SSD-100, VPS-6-SSD-200
region        = "EU"            # Available: EU, US-central, US-east, US-west, SIN

# SSH Configuration
ssh_keys       = []  # List of SSH key IDs from your Contabo account
admin_user     = "ubuntu"
ssh_allowed_ips = "0.0.0.0/0"  # Restrict this to your IP range for better security

# Optional Features (set to true to enable)
enable_object_storage    = false
enable_private_network   = false
enable_security_group    = true
enable_snapshots        = false

# Object Storage Configuration (if enabled)
storage_size_limit = 250  # GB

# Private Network Configuration (if enabled)
private_network_cidr = "10.0.0.0/24"

# Custom Firewall Rules (optional)
custom_ports = [
  {
    protocol  = "tcp"
    from_port = 8080
    to_port   = 8080
    ip_range  = "0.0.0.0/0"
  },
  {
    protocol  = "tcp"
    from_port = 3000
    to_port   = 3000
    ip_range  = "0.0.0.0/0"
  }
]

# Environment and Tagging
environment = "dev"
add_ons     = []

tags = {
  Environment = "development"
  Project     = "terraform-contabo"
  ManagedBy   = "terraform"
  Owner       = "your-name"
} 